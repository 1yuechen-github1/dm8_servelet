<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.Mapper.StudentObjectMapper">

    <insert id="joinTheClass">
        INSERT INTO "dm8"."student_object" VALUES (#{userId},#{subjectId} )
    </insert>

    <delete id="delObjectAndStudebtBysubjectId">
        DELETE  FROM "dm8"."student_object"
        WHERE "object_id" = '${subjectId}'
    </delete>

    <delete id="delStudentCourseByCourseId" parameterType="int">
        DELETE FROM "dm8"."student_object"
        WHERE "user_id" = #{userId} AND "object_id" = #{courseId}
    </delete>

    <select id="queryAllStudentObject" resultType="org.example.entity.StudentObject">
        SELECT * FROM "dm8"."student_object";
    </select>
    <select id="queryStudentObjectByuserId" resultType="org.example.entity.StudentObject">
        select * from "dm8"."student_object" where "user_id" = #{userId}
    </select>

    <select id="queryStudentObjectsByuserId" resultType="org.example.entity.StudentObject">
        select * from "dm8"."student_object" where "user_id" = #{userId}
    </select>

    <update id="updateUserByUserId" parameterType="org.example.entity.User">
        UPDATE "dm8"."users"
        <set>
            <trim suffixOverrides=",">
                <if test="email != null">
                    "email" = #{email},
                </if>
                <if test="phone != null">
                    "phone" = #{phone},
                </if>
                <if test="sex != null">
                    "sex" = #{sex},
                </if>
                <if test="idCard != null">
                    "id_card" = #{idCard}
                </if>
            </trim>
        </set>
        WHERE "id" = #{id};
    </update>
</mapper>